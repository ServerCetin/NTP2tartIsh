@model IEnumerable<tartIsh.Models.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminContent.cshtml";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Kategoriler
                </h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Kategori</th>
                                <th>Açıklaması</th>
                                <th>Ustalık Sahibi Sayısı</th>
                                <th>Eylem</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Kategori</th>
                                <th>Açıklaması</th>
                                <th>Rozetli Sayısı</th>
                                <th>Eylem</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                int turn = 0;
                                for (int x = 0; x < ViewBag.UsersCategoryMastery.GetLength(0); x++)
                                {
                                    if (item.Id == ViewBag.UsersCategoryMastery[x,0]) { turn = x; }
                                }
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                                <td>@Html.DisplayFor(modelItem => item.CategoryDescription)</td>
                                <td>@ViewBag.UsersCategoryMastery[turn, 1]</td>
                                <td>@Html.ActionLink("Düzenle","EditCategory", new { id=item.Id})</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



