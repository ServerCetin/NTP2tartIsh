@model IEnumerable<tartIsh.Models.UserMessage>
@{
    ViewBag.Title = "SentMessages";
}

    <div class="msg_history" id="chatlogs">
        @foreach (var msg in Model)
        {
            if (msg.SenderId == ViewBag.Id)
            {
                <div class="outgoing_msg">
                    <div class="sent_msg">
                        <p>
                            @msg.MessageText
                        </p>
                        <span class="time_date"> @msg.SentDate.ToShortTimeString() |  @msg.SentDate.ToShortDateString()</span>
                    </div>
                </div>
            }
            else
            {
                <div class="incoming_msg">
                    <div class="incoming_msg_img"> <img src="@msg.TartIshUser1.ProfileImage" alt="sunil"> </div>
                    <div class="received_msg">
                        <div class="received_withd_msg">
                            <p>
                                @msg.MessageText
                            </p>
                            <span class="time_date"> @msg.SentDate.ToShortTimeString() |  @msg.SentDate.ToShortDateString()</span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

