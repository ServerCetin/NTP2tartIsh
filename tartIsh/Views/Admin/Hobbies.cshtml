@model IEnumerable<tartIsh.Models.Hobby>
@{
    ViewBag.Title = "Hobi Listesi";
    Layout = "~/Views/Shared/_AdminContent.cshtml";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Hobiler
                </h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Hobi</th>
                                <th>Açıklaması</th>
                                <th>Hobiye Sahip Sayısı</th>
                                <th>Resmi</th>
                                <th>Eylem</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Hobi</th>
                                <th>Açıklaması</th>7
                                <th>Hobiye Sahip Sayısı</th>
                                <th>Resmi</th>
                                <th>Eylem</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                int turn = 0;
                                for (int x = 0; x < ViewBag.GetUsersHobby.GetLength(0); x++)
                                {
                                    if (item.Id == ViewBag.GetUsersHobby[x, 0]) { turn = x; }
                                }
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.HobbyName)</td>
                                <td>@Html.DisplayFor(modelItem => item.HobbyDescription)</td>
                                <td>@ViewBag.GetUsersHobby[turn,1]</td>
                                <td>@Html.DisplayFor(modelItem => item.HobbyImg)</td>
                                <td>@Html.ActionLink("Düzenle", "EditHobbies", new { id = item.Id })</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

