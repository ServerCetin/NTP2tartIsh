@model IEnumerable<tartIsh.Models.TartIshUser>

@{
    ViewBag.Title = "Usta Kullanıcı Listesi";
    Layout = "~/Views/Shared/_AdminContent.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Kullanıcılar
                </h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Kullanıcı Adı</th>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Ustalık Sayısı</th>
                                <th>Kategori Uzmanlıkları</th>
                                <th>Kayıt Tarihi</th>
                                <th>Eylem</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Kullanıcı Adı</th>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Ustalık Sayısı</th>
                                <th>Kategori Uzmanlıkları</th>
                                <th>Kayıt Tarihi</th>
                                <th>Eylem</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                    <td>@item.Masteries.Count()</td>
                                    <td>
                                        @foreach (var x in item.Masteries)
                                        {
                                           <a href="#">@x.Category.CategoryName </a>
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.RegisterDate)</td>
                                    <td>
                                        @Html.ActionLink("Yasakla", "BanUser", new { id = item.Id })
                                        @Html.ActionLink("Ustalık Kaldır", "RemoveRMasterie", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

